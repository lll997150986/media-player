<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray6"
    android:orientation="vertical"
    tools:context="com.playhard.musicplayer.MusicListActivity">

    <include layout="@layout/common_nav"></include>
    <include layout="@layout/play_all"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ListView
                android:id="@+id/lvw_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:divider="@color/colorGray4">
            </ListView>
        </LinearLayout>
        <include layout="@layout/bottom_nav"></include>
    </LinearLayout>
</LinearLayout>
